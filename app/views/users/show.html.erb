<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html lang="ja">
<% provide(:title, "ユーザー詳細") %>
<body>
  <main>
    <section class="text-center pt-5 pb-2">
      <h2 class="mb-4">ユーザ情報</h2>
      <div class="container-fluid">
        <table class="table">
          <tbody>
            <tr>
              <td class="text-center">
                ユーザID
              </td>
              <td>
                <%= @user.id %>
              </td>
            </tr>

            <tr>
              <td class="text-center">
                氏名
              </td>
              <td>
                <%= @user.last_name %><%= @user.first_name %>
              </td>
            </tr>

            <tr>
              <td class="text-center">
                住所
              </td>
              <td>
                〒<%= @user.zipcode %><br>
                <%= @user.prefecture %><%= @user.municipality %><%= @user.address %>
                <%= @user.apartments %>
              </td>
            </tr>
            <tr>
              <td class="text-center">
                電話番号
              </td>
              <td>
                <%= @user.phone_number %>
              </td>
            <tr>
              <td class="text-center">
                メールアドレス
              </td>
              <td>
                <%= @user.email %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <div class="text-center">
      <%= link_to "修正/退会する", edit_user_path, class: "btn btn-primary" %>
    </div>
  </main>
</body>

</html>